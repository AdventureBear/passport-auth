extends ../layout.pug

block content
	content
		.container
			.form-heading
				h2 
					i.fa.fa-arrow-circle-right  Sign Up
				if message.length>0
					p #{message}
			.login-form
				form(action='' method='post')
					fieldset
						.form-group.mid-font
							.form-label
								<i class="fa fa-address-book" aria-hidden="true"></i>
							.form-input 
								input(type='email' name='email' placeholder='Email')

						.form-group.mid-font
							.form-label
								<i class="fa fa-unlock" aria-hidden="true"></i>
							.form-input 
								input(type='password' name='password' placeholder='Password')
						.right
							button(type='submit') 
								<i class="fa fa-lock" aria-hidden="true"></i> Local signup

				.misc.right

					p Already have an account? 
						a.underline(href='/users/login') Login!
					p Use social media connect:
					a(href='/users/auth/facebook')
						i(aria-hidden="true").fa.fa-facebook-square.large-font.facebook-front.pad-8-r
					a(href='/users/auth/twitter')
						i(aria-hidden="true").fa.fa-twitter-square.large-font.twitter-front.pad-8-r
					a(href='/users/auth/google')
						i(aria-hidden="true").fa.fa-google.large-font.google-front.pad-8-r
